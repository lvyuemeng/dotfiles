# == user ==
[user]
	name = {{ .githubUserName }}
	email = {{ .gmail }}
[github]
	user = {{ .githubUserName }}
[init]
	defaultBranch = main

# == Ease ==
[core]
{{ if (or (eq .chezmoi.os "darwin") (eq .chezmoi.os "linux")) }}
  editor = nvim
{{ else }}
  editor = code --wait
{{ end }}
[fetch]
	prune = true
[alias]
	st = "status"
	br = "branch"
	ch = "checkout"
	cm = "commit"
[color]
	ui = auto

# == Security ==
# transfer/receive integrity
[transfer]
	fsckObjects = true
[receive]
	fsckObjects = true
# credenence cache
{{- if eq .chezmoi.os "windows" }}
[credential]
    helper = manager
{{- else if eq .chezmoi.os "darwin" }}
[credential]
    helper = osxkeychain
{{- else if eq .chezmoi.os "linux" }}
[credential]
    helper = cache --timeout=7200
{{- end }}
[credential "https://codeberg.org"]
	provider = generic

# == net ==
[http]
sslverify = false
